<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>

      <h1>Patients</h1>

      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @patients.each do |patient| %>
            <tr>
              <td><%= patient.name %></td>
              <td><%= patient.phone %></td>
              <td><%= link_to 'Show', patient %> | 
              <%= link_to 'Edit', edit_patient_path(patient) %> | 
              <%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Patient', new_patient_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>

